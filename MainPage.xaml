<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiAppMaui.MainPage"
             BackgroundColor="White">

    <VerticalStackLayout Padding="20" Spacing="20">
        <Label Text="Desliza para ajustar los valores" FontSize="18" HorizontalOptions="Center" />

        <Slider x:Name="SliderR" Minimum="0" Maximum="255" ValueChanged="OnSliderValueChanged" />
        <Slider x:Name="SliderG" Minimum="0" Maximum="255" ValueChanged="OnSliderValueChanged" />
        <Slider x:Name="SliderB" Minimum="0" Maximum="255" ValueChanged="OnSliderValueChanged" />

        <Label x:Name="LabelRGB" Text="(0, 0, 0)" FontSize="24" HorizontalOptions="Center" TextColor="Black" />
        <Frame
            BackgroundColor="White"
            Padding="10"
            Margin="0,10"
            CornerRadius="5"
            HasShadow="True"
            HorizontalOptions="Center">
            <Label x:Name="LabelHex"
                Text="#000000"
                TextColor="Black"
                FontAttributes="Bold">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnHexLabelTapped" />
                </Label.GestureRecognizers>
            </Label>
        </Frame>
        <Button Text="Color Aleatorio"
        Margin="0,10"
        Clicked="OnRandomColorClicked" />


    </VerticalStackLayout>
</ContentPage>

